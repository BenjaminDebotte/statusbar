send_notification() {
	TODAY=$(date '+%-d')
	HEAD=$(cal "$1" | head -n1)
	BODY=$(cal "$1" | tail -n7 | sed -z "s|$TODAY|<u><b>$TODAY</b></u>|1")
	FOOT="\n<i>       ~ calendar</i> ó°¸— "
	dunstify -h string:x-canonical-private-synchronous:calendar \
		"$HEAD" "$BODY$FOOT" -u NORMAL
}

case $BUTTON in
    1) send_notification "+0months";;
    3) notify-send "ğŸ“… Time/date module" "\- Left click to show show the month via \`cal\`" ;;
    6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

echo $(date "+ï€— %H:%M:%S | %d.%m w%V")

#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge icon (ğŸ”Œ for plugged up, ğŸ”‹ for discharging on battery, etc.).

case $BLOCK_BUTTON in
	3) notify-send "ï•¸ Battery module" "ï•¸: discharging
ï•¸: not charging
ï–„: stagnant charge
ï–„: charging
ï–„: charged
ï–‚: battery very low!" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# acpi alternative
# acpi | sed "s/Battery [0-9]: //;s/[Dd]ischarging, /ğŸ”‹/;s/[Nn]ot charging, /ğŸ›‘/;s/[Cc]harging, /ğŸ”Œ/;s/[Uu]nknown, /â™»ï¸/;s/[Ff]ull, /âš¡/;s/ \(remaining\|until charged\)//"; exit

# Loop through all attached batteries.
for battery in /sys/class/power_supply/BAT?
do
	# Get its remaining capacity and charge icon.
	capacity=$(cat "$battery"/capacity) || break
	status=$(cat "$battery"/status) || break

	# If it is discharging and 25% or less, we will add a â— as a warning.
	 [ "$capacity" -le 100 ] && icon="ï•¸"
	 [ "$capacity" -le 90 ] && icon="ï–"
	 [ "$capacity" -le 80 ] && icon="ï–€"
	 [ "$capacity" -le 70 ] && icon="ï•¿"
	 [ "$capacity" -le 60 ] && icon="ï•¾"
	 [ "$capacity" -le 50 ] && icon="ï•½"
	 [ "$capacity" -le 40 ] && icon="ï•¼"
	 [ "$capacity" -le 30 ] && icon="ï•»"
	 [ "$capacity" -le 20 ] && icon="ï•º"
	 [ "$capacity" -le 10 ] && icon="ï•¹"
	 [ "$capacity" -le 5 ] && icon="ï–‚"
	 [ "$status" == "Charging" ] && icon="ï–ƒ"

	printf "%s %s%% " "$icon" "$capacity"
done | sed 's/ *$//'
